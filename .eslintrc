{
	"env": {
		"browser": false,
		"es6": true,
		"node": true
	},
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended"
	],
	"plugins": [
		"unused-imports",
		"eslint-plugin-node",
		"eslint-plugin-lodash"
	],
	"globals": {
		"DBConnections": "readonly",
		"rootDir": "readonly",
		"document": "readonly"
    },
	"rules": {
		"array-callback-return": 2,
		"arrow-spacing": 2,
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"max-classes-per-file": 2,
		"max-depth": 2,
		"max-len": [2, 250],
		"max-lines": [1, { "skipBlankLines": true, "max": 800 }],
		"max-lines-per-function": [1, { "skipBlankLines": true, "max": 500 }],
		"max-nested-callbacks": 2,
		"max-params": [2, 8],
		"max-statements": [1, 100],
		"max-statements-per-line": 2,
		"no-alert": 2,
		"no-console": 2,
		"no-duplicate-imports": 2,
		"no-else-return": 2,
		"no-empty-function": 2,
		"no-loop-func": 2,
		"no-lonely-if": 2,
		"no-return-await": 2,
		"no-script-url": 2,
		"no-var": 2,
		"no-undef": 2,
		"no-unused-vars": 0,
		"no-useless-computed-key": [2, { "enforceForClassMembers": true }],
		"require-await": 2,
		"semi": [2, "always"],
		"quotes": [2, "double"],
		"unused-imports/no-unused-imports": 2,
		"unused-imports/no-unused-vars": [2, { "ignoreRestSiblings": true }]
	}
}